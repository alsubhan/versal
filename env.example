# Versal Local Docker Deployment Environment Variables
# Copy this file to .env and update the values as needed

# ============================================================================
# Port Configuration
# ============================================================================
BACKEND_PORT=7001
FRONTEND_PORT=7000
SUPABASE_PUBLIC_PORT=8000
# Note: Supabase Studio is accessed through Kong on port 8000, not a separate port
SUPABASE_STUDIO_PORT=8000

# ============================================================================
# Supabase Configuration
# ============================================================================
# Public URL for Supabase (used by frontend and external clients)
SUPABASE_PUBLIC_URL=http://localhost:8000

# Internal URL for Supabase (used by backend services)
SUPABASE_INTERNAL_URL=http://supabase-kong:8000

# Supabase API Keys (required)
# Generate these using: openssl rand -base64 32
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Supabase JWT Secret (required)
# Generate using: openssl rand -base64 32
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database Password (default: postgres)
SUPABASE_DB_PASSWORD=postgres

# Supabase Auth Settings
SUPABASE_DISABLE_SIGNUP=false
# Auto-confirm users on signup (no email verification required)
# Set to true to auto-confirm, false to require email verification
SUPABASE_MAILER_AUTOCONFIRM=true
# Note: With MAILER_AUTOCONFIRM=true, the mailer is disabled in docker-compose.yml
# to prevent errors when no SMTP server is configured

# ============================================================================
# Backend Configuration
# ============================================================================
DEBUG=false

# GitHub Integration (used by backend issue reporter)
GITHUB_OWNER=alsubhan
GITHUB_REPO=versal
GITHUB_TOKEN=

